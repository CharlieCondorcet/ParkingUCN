<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.RegistrarConfirmacion">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- TODO: Update blank fragment layout -->

        <TextView
            android:id="@+id/titConfReg"
            android:layout_width="346dp"
            android:layout_height="38dp"
            android:layout_marginTop="76dp"
            android:text="Confirmar Datos"
            android:textAlignment="center"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.04" />

        <TableLayout
            android:id="@+id/tablaConfReg"
            android:layout_width="359dp"
            android:layout_height="280dp"
            android:layout_marginTop="16dp"
            android:stretchColumns="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titConfReg"
            app:layout_constraintVertical_bias="0.239">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/nombreConfReg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre: "
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/nomDispConfReg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre Persona Ejemplo"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/rutConfReg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rut:"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/rutDispConfReg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="11.111.111-1"
                    android:textSize="18sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/patenteConfReg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Patente:"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/patenteDispConfReg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AS1234"
                    android:textSize="18sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/fechaConfReg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha Ingreso: "
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/fechaDispConfReg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/horaConfReg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hora Ingreso: "
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/horaDispConfReg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="18sp" />
            </TableRow>

        </TableLayout>

        <Button
            android:id="@+id/botonConfirmar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirmar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tablaConfReg"
            app:layout_constraintVertical_bias="0.104" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>